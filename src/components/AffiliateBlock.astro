---
import affiliateData from '../content/affiliate-links.json';

interface Props {
  productId: string;
}

const { productId } = Astro.props;
// @ts-ignore
const product = affiliateData[productId];

if (!product) {
  throw new Error(`Product ID ${productId} not found in affiliate-links.json`);
}

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const imageUrl = product.imageUrl.startsWith('/') 
  ? `${base}${product.imageUrl}` 
  : product.imageUrl;
---

<div class="affiliate-block card">
  <div class="affiliate-image">
    <img src={imageUrl} alt={product.label} loading="lazy" />
  </div>
  
  <div class="affiliate-content">
    <div class="affiliate-info">
        <span class="category-tag">{product.category}</span>
        <h3 class="product-name">
            {product.label}
            {product.notes && <span class="notes-badge">{product.notes}</span>}
        </h3>
        
        {product.shortBenefit && (
            <p class="product-benefit">{product.shortBenefit}</p>
        )}

        {product.facts && (
            <div class="product-facts">
                <span class="facts-label">Facts rapides :</span>
                <ul>
                    {product.facts.map((fact: string) => <li>{fact}</li>)}
                </ul>
            </div>
        )}

        {(product.idealFor || product.notFor) && (
            <div class="product-usage text-sm">
                {product.idealFor && (
                    <div class="usage-item">
                        <strong>Idéal pour :</strong> {product.idealFor}
                    </div>
                )}
                {product.notFor && (
                    <div class="usage-item">
                        <strong>Pas pour :</strong> {product.notFor}
                    </div>
                )}
            </div>
        )}
    </div>
    
    <div class="affiliate-actions">
        <a href={product.amazonUrl} target="_blank" rel="noopener noreferrer" class="btn amazon-btn">
            Voir sur Amazon
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
        </a>
    </div>
  </div>
</div>

<style>
.affiliate-block {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    background: #fff;
    margin: 2.5rem 0;
    padding: 2rem;
    border: 1px solid #eee;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
}

.affiliate-block:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.08), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: #ddd;
}

/* Image styles */
.affiliate-image {
    flex-shrink: 0;
    width: 100%;
    max-width: 200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
}

.affiliate-image img {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: contain;
}

.affiliate-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 2rem;
    width: 100%;
}

.affiliate-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.category-tag {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #888;
    margin-bottom: 0.25rem;
}

.product-name {
    margin: 0.25rem 0 0.5rem;
    font-size: 1.5rem;
    color: var(--color-accent);
    font-weight: 700;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
}

.notes-badge {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    background: #000;
    color: #fff;
    padding: 4px 10px;
    border-radius: 99px;
    letter-spacing: 0.05em;
    white-space: nowrap;
    flex-shrink: 0;
}

.product-facts {
    margin-top: 1rem;
    text-align: left;
    width: 100%;
    background: #f9f9f9;
    padding: 1.25rem;
    border-radius: 8px;
}

.facts-label {
    display: block;
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    color: #999;
    margin-bottom: 0.75rem;
    letter-spacing: 0.05em;
}

.product-facts ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
}

.product-facts li {
    font-size: 0.85rem;
    color: #444;
    position: relative;
    padding-left: 1.25rem;
    line-height: 1.4;
}

.product-facts li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
}

.product-usage {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    width: 100%;
}

.usage-item {
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
    color: #666;
}

.usage-item strong {
    color: var(--color-accent);
    font-weight: 600;
}

.affiliate-actions {
    display: flex;
    justify-content: center;
    width: 100%;
}

.amazon-btn {
    width: 100%;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem;
    border-radius: 8px;
    font-size: 1rem;
    background: #000;
    transition: background 0.2s;
}

.amazon-btn:hover {
    background: #333;
}

@media (min-width: 768px) {
    .affiliate-block {
        flex-direction: row;
        align-items: flex-start;
        padding: 2.5rem;
    }

    .affiliate-image {
        max-width: 220px;
        margin: 0;
        padding-right: 2.5rem;
        border-right: 1px solid #eee;
        align-self: center;
    }

    .affiliate-content {
        padding-left: 2.5rem;
        flex: 1;
    }

    .affiliate-info {
        align-items: flex-start;
        text-align: left;
        flex: 1;
    }

    .product-name {
        justify-content: flex-start;
    }

    .affiliate-actions {
        width: 100%;
        margin-left: 0;
        margin-top: 1rem;
    }

    .amazon-btn {
        width: 100%;
        padding: 1rem 2rem;
    }
}
</style>
