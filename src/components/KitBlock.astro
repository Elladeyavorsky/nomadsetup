---
import ProductCard from './ProductCard.astro';

interface Props {
  title: string;
  budget: string;
  description: string;
  productIds: string[];
}

const { title, budget, description, productIds } = Astro.props;
---

<div class="kit-block">
  <div class="kit-header">
    <h2>{title} <span class="budget">({budget})</span></h2>
    <p>{description}</p>
  </div>
  
  <div class="kit-products">
    {productIds.map(id => (
      <ProductCard productId={id} />
    ))}
  </div>
</div>

<style>
.kit-block {
    margin-bottom: 4rem;
    background: #fff;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
}

.kit-header {
    margin-bottom: 2rem;
}

.kit-header h2 {
    margin-bottom: 0.5rem;
}

.budget {
    color: var(--color-text-light);
    font-weight: 400;
    font-size: 0.8em;
}

.kit-products {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}
</style>
