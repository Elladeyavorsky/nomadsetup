---
import navData from '../content/navigation.json';
import siteData from '../content/site.json';

const base = import.meta.env.BASE_URL;
---

<header class="site-header">
  <div class="container header-inner">
    <a href={base} class="site-logo">{siteData.siteName}</a>
    <nav>
      <ul class="nav-list">
        {navData.mainMenu.map(item => (
          <li><a href={`${base.replace(/\/$/, '')}${item.path}`}>{item.label}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--color-border);
    padding: 1.5rem 0;
    margin-bottom: 2rem;
  }
  .header-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .site-logo {
    font-weight: 800;
    font-size: 1.5rem;
    text-transform: uppercase;
    letter-spacing: -0.05em;
    border: none;
  }
  .nav-list {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
    justify-content: center;
  }
  .nav-list a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text-light);
    border: none;
  }
  .nav-list a:hover {
    color: var(--color-accent);
  }

  @media (min-width: 640px) {
    .header-inner {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
