---
import Layout from '../layouts/Layout.astro';
import KitBlock from '../components/KitBlock.astro';
import PageHeader from '../components/PageHeader.astro';
import pagesData from '../content/pages.json';

const { kits } = pagesData;
---

<Layout title="Kits RecommandÃ©s" description={kits.description}>
  <PageHeader title={kits.title} description={kits.description} />

  <div class="kits-container">
    {kits.list.map(kit => (
      <KitBlock
        title={kit.title}
        budget={kit.budget}
        description={kit.description}
        productIds={kit.productIds}
      />
    ))}
  </div>

  <section class="guide-section">
    <h2>{kits.guide.title}</h2>
    <p>{kits.guide.content}</p>
  </section>
</Layout>

<style>
  /* Removed page-header styles as they are replaced by PageHeader component */

  .guide-section {
    margin-top: 5rem;
    padding: 2rem;
    background: #fafafa;
    border-radius: 8px;
  }
</style>
