    padding: 0.75rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-text-light);
  }
  .section {
    margin-top: 4rem;
  }
  .highlight-section {
    border: 2px solid var(--color-accent);
    padding: 2rem;
    border-radius: 8px;
  }
  .criteria-list {
    columns: 2;
  }
  .faq-item {
    margin-bottom: 2rem;
  }
  .faq-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
</style>
