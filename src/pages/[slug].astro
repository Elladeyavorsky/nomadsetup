---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import AffiliateBlock from '../components/AffiliateBlock.astro';
import pagesData from '../content/pages.json';
import affiliateData from '../content/affiliate-links.json';

export async function getStaticPaths() {
  // @ts-ignore
  const pages = Object.values(pagesData.moneyPages);
  return pages.map((page: any) => ({
    params: { slug: page.slug },
    props: { page }
  }));
}

const { page } = Astro.props;
---

<Layout title={page.title} description={page.summary.join('. ')}>
  <PageHeader title={page.title} description={page.summary.join('. ')} />
  
  <article class="money-page">
    <div class="summary-box">
      <h3>En bref</h3>
      <ul>
        {page.summary.map((point: string) => <li>{point}</li>)}
      </ul>
    </div>

    <div class="disclaimer-banner text-sm">
       Note : Certains liens sont affili√©s. Nous recommandons uniquement ce que nous utiliserions nous-m√™mes.
    </div>

    <!-- Criteria Section -->
    <section class="section">
      <h2>Crit√®res de s√©lection</h2>
      <p>Pour choisir le meilleur mod√®le, nous avons analys√© :</p>
      <ul class="criteria-list">
        {page.criteria.map((c: string) => <li>{c}</li>)}
      </ul>
    </section>

    <!-- Top Pick -->
    <section class="section highlight-section">
      <h2>üèÜ Notre Choix : {affiliateData[page.myPickId]?.label}</h2>
      <p>Le meilleur compromis performance/prix pour la plupart des voyageurs.</p>
      <AffiliateBlock productId={page.myPickId} />
    </section>

    <!-- All Recommendations -->
    <section class="section">
      <h2>Toutes les recommandations</h2>
      {page.productIds.filter((id: string) => id !== page.myPickId).map((id: string) => (
        <AffiliateBlock productId={id} />
      ))}
    </section>

    <!-- FAQ -->
    <section class="section faq-section">
      <h2>Questions Fr√©quentes</h2>
      {page.faq.map((item: any) => (
        <div class="faq-item">
          <h3>{item.q}</h3>
          <p>{item.a}</p>
        </div>
      ))}
    </section>
  </article>
</Layout>

<style>
  .money-page {
    max-width: 700px; /* Slightly wider for product blocks */
    margin: 0 auto;
  }
  .money-page {
