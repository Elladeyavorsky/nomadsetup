---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import AffiliateBlock from '../components/AffiliateBlock.astro';
import pagesData from '../content/pages.json';
import affiliateData from '../content/affiliate-links.json';

export async function getStaticPaths() {
  // @ts-ignore
  const pages = Object.values(pagesData.moneyPages);
  return pages.map((page: any) => ({
    params: { slug: page.slug },
    props: { page }
  }));
}

const { page } = Astro.props;
---

<Layout title={page.title} description={page.summary.join('. ')}>
  <PageHeader title={page.title} description={page.summary.join('. ')} />
  
  <article class="money-page">
    <div class="summary-box">
      <h3>En bref</h3>
      <ul>
        {page.summary.map((point: string) => <li>{point}</li>)}
      </ul>
    </div>

    <div class="disclaimer-banner text-sm">
       Note : Certains liens sont affiliés. Nous recommandons uniquement ce que nous utiliserions nous-mêmes.
    </div>

    <!-- Criteria Section -->
    <section class="section">
      <h2>Critères de sélection</h2>
      <p>Pour choisir le meilleur modèle, nous avons analysé :</p>
      <ul class="criteria-list">
        {page.criteria.map((c: string) => <li>{c}</li>)}
      </ul>
    </section>

    <!-- Top Pick -->
    <section class="section highlight-section">
      <div class="highlight-badge">Notre Choix</div>
      <p class="highlight-tagline">Le meilleur compromis performance/prix pour la plupart des voyageurs.</p>
      <AffiliateBlock productId={page.myPickId} />
    </section>

    <!-- All Recommendations -->
    <section class="section">
      <h2>Toutes les recommandations</h2>
      {page.productIds.filter((id: string) => id !== page.myPickId).map((id: string) => (
        <AffiliateBlock productId={id} />
      ))}
    </section>

    <!-- FAQ -->
    <section class="section faq-section">
      <h2>Questions Fréquentes</h2>
      {page.faq.map((item: any) => (
        <div class="faq-item">
          <h3>{item.q}</h3>
          <p>{item.a}</p>
        </div>
      ))}
    </section>
  </article>
</Layout>

<style>
  .money-page {
    max-width: 700px; /* Slightly wider for product blocks */
    margin: 0 auto;
  }
  .money-page {
    max-width: 700px; /* Slightly wider for product blocks */
    margin: 0 auto;
  }
  /* removed page-header */
  .summary-box {
    background: #fafafa;
    border: 1px solid var(--color-border);
    padding: 2rem;
    border-radius: 12px;
    margin-top: 3rem;
  }
  .summary-box h3 {
    margin-top: 0;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }
  .summary-box ul {
    margin-bottom: 0;
    list-style: none;
    padding-left: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  .summary-box li {
    margin-bottom: 0;
    position: relative;
    padding-left: 1.5rem;
    font-size: 0.95rem;
  }
  .summary-box li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--color-text);
    font-weight: bold;
  }
  .disclaimer-banner {
    background: #fff;
    border: 1px solid var(--color-border);
    padding: 0.75rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-text-light);
  }
  .section {
    margin-top: 4rem;
  }
  .highlight-section {
    background: #fcfcfc;
    border: 1px solid var(--color-border);
    padding: 3rem 2rem;
    border-radius: 12px;
    position: relative;
    margin-top: 5rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.03);
  }
  .highlight-badge {
    position: absolute;
    top: -12px;
    left: 2rem;
    background: var(--color-accent);
    color: #fff;
    padding: 6px 14px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 2px;
  }
  .highlight-tagline {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0 auto 2rem;
    max-width: 500px;
    line-height: 1.4;
    text-align: center;
  }
  
  /* Integration with AffiliateBlock */
  .highlight-section :global(.affiliate-block) {
    border: none;
    background: transparent;
    margin: 0;
    padding: 1rem 0 0;
    box-shadow: none;
  }
  
  .highlight-section :global(.affiliate-block:hover) {
    transform: none;
    box-shadow: none;
  }

  .highlight-section :global(.affiliate-image) {
    background: #fff;
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid #f0f0f0;
  }
  .criteria-list {
    columns: 2;
  }
  .faq-item {
    margin-bottom: 2rem;
  }
  .faq-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
</style>
